
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-sm-3">
                <div class="col">
                    <p>Fecha de Inicio:</p>
                    <input type="date" @bind="@fechaInicio"  @bind:format="yyyy-MM-dd"  />
                </div>
            </div>
            <div class="col-sm-3">
                <div class="col">
                    <p>Fecha de Fin:</p>
                    <input type="date" @bind="@fechaFin" @bind:format="yyyy-MM-dd" />
                </div>
            </div>
            <div class="col-sm-3">
                <div class="col">
                    <button type="button" class="btn btn-primary" @onclick="@metodo">
                        Buscar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    /// <value>Get y Set del atributo fechaInicio</value>
    [Parameter] public DateTime fechaInicio { get; set; } = DateTime.Now.AddHours(-6).AddDays(-7);
    /// <value>Get y Set del atributo fechaFin</value>
    [Parameter] public DateTime fechaFin { get; set; } = DateTime.Now.AddHours(-6);
    /// <value>Get y Set del atributo metodo</value>
    [Parameter] public EventCallback metodo { get; set; }
}
