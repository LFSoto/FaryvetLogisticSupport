@page "/AgregarVehiculo"
@inject HttpClient Http
@inject NavigationManager Navigation

<FormularioVehiculo 
                    textoBoton="Agregar Vehiculo" 
                    textoTitulo="Agregar nuevo Vehiculo" 
                    metodo="@agregarVehiculo"
                    vehiculo="@vehiculo" 
                    />

@code {
    /// <value>Creación de un objeto tipo Vehiculo</value>
    public Vehiculo vehiculo = new Vehiculo {estado = "Disponible"};

    /// <summary>
    /// El metodo hará una petición al controlador de vehiculos, esto para guardar un vehiculo.
    /// Una vez guardado se enviará a la pagina Vehiculo
    /// </summary>
    async Task agregarVehiculo()
    {
        await Http.PostJsonAsync("Vehiculo", vehiculo);

        Navigation.NavigateTo("Vehiculo");
    }
}
