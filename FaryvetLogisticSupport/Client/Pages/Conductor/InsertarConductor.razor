@page "/insertarConductor"
@inject HttpClient _http
@inject NavigationManager navMan

<FormularioConductor textoBoton="Insertar Conductor"
                     textoTitulo ="Insertar Conductor"
                     metodo="@InsertConductor"
                     conductor="@conductor"
                     />


@code {
    /// <value>Set y get del objeto de Conductor.</value>
    Conductor conductor = new Conductor() { estado = "Disponible"};

    /// <summary>
    /// Funciones que inserta un conductor y navega al indice de conductores.
    /// </summary>
    async Task InsertConductor()
    {
        await _http.PostJsonAsync("Conductor", conductor);
        navMan.NavigateTo("conductores");
    }
}
